{
    "name": "styleci/cli",
    "description": "The CLI tool for StyleCI",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "StyleCI",
            "email": "support@styleci.io"
        }
    ],
    "require": {
        "php": "^7.4.15 || ^8.0.2",
        "ext-json": "*",
        "ext-zlib": "*"
    },
    "suggest": {
        "ext-curl": "Required for high performance HTTP transport"
    },
    "bin": [
        "bin/styleci"
    ],
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "bin-dir": "bin"
    }
}
